{
  "compilerOptions": {
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "target": "es2019",
    "lib": [
      "es2019",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "outDir": "build",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/__tests__",
    "**/*.test.ts"
  ]
}